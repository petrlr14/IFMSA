<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImageView_IComite_Comite"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@color/indigo_200" />

        <TextView
            android:id="@+id/TextView_Acronimo_Comite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImageView_IComite_Comite"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="C.O.M.I.T.E"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView_DefAcronimo_Comite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView_Acronimo_Comite"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Como Ordenar Mucha Informacion Terminal Estupida"
            android:textSize="@dimen/text_profile"

            />


    </RelativeLayout>


</android.support.v7.widget.CardView>
