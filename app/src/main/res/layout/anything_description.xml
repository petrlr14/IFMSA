<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ImageView_AnyImage_thing"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@color/indigo_300" />

            <TextView
                android:id="@+id/EditText_AnyTitle_thing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ImageView_AnyImage_thing"
                android:layout_margin="12dp"
                android:gravity="center"
                android:text="Titulo"
                android:textSize="@dimen/text_profile"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linea_anything"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/EditText_AnyTitle_thing"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Fecha"
                    android:textSize="@dimen/text_profile" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Hora"
                    android:textSize="@dimen/text_profile" />
            </LinearLayout>


            <TextView
                android:id="@+id/TextView_AnyDescription_thing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linea_anything"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="DescripciÃ³n" />

        </RelativeLayout>

    </ScrollView>

</android.support.v7.widget.CardView>
